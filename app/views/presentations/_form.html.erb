<%= form_for(@presentation, html: { class: "edit_presentation form-horizontal", role: "form" }) do |f| %>

  <!-- Errors -->
  <%= bootstrap_errors f %>
  
  <!-- Project -->
  <%= f.hidden_field :activity_id %>
  
  <div class="form-group">
    <label class="col-sm-2 control-label">Activity Title</label>
    <div class="col-sm-10">
      <p class="form-control-static"><%= @activity.title %></p>
    </div>
  </div>
  
  <%= content_tag(:div, class: "form-group #{has_error(f.object, :event_date)}") do %>
    <%= f.label :event_date, class: "col-sm-2 control-label"%>
    <div class="col-sm-10">
      <div class="input-group date" data-behaviour="datepicker">
        <%= f.text_field :chronic_event_date, class: "form-control" %>
        <span class="input-group-addon">
          <span class="glyphicon glyphicon-calendar"></span>
        </span>
      </div>
    </div>
  <% end %>

  <%= content_tag(:div, class: "form-group #{has_error(f.object, :rn_participants)}") do %>
    <%= f.label :rn_participants, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :rn_participants, placeholder: "RN Participants", class: "form-control" %>
    </div>
  <% end %>
  
  <%= content_tag(:div, class: "form-group #{has_error(f.object, :all_participants)}") do %>
    <%= f.label :all_participants, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :all_participants, placeholder: "All Participants", class: "form-control" %>
    </div>
  <% end %>
  
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-default" %>
    </div>
  </div>
<% end %>
