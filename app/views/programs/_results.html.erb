<div class="table-responsive">
  <table class="table table-condensed table-striped table-hover">
  	<thead>
  		<tr>
  			<th>Name</th>
  			<th>Start Date</th>
  			<th>End Date</th>
      
        <th class="shrink"></th>
        <th class="shrink"></th>
        <th class="shrink"></th>
  		</tr>
  	</thead>

  	<tbody>
  		<% @programs.each do |program| -%>
    		<tr>
    			<td><%= program.name %></td>
    			<td><%= program.chronic_start_date %></td>
    			<td><%= program.chronic_end_date %></td>
          
          <td>
            <%= link_to program_path(program) do %>
              <span class="glyphicon glyphicon-info-sign"></span>
            <% end %>
          </td>
          <td>
            <%= link_to edit_program_path(program) do %>
              <span class="glyphicon glyphicon-pencil"></span>
            <% end %>
          </td>
          <td>
            <%= link_to(program, method: :delete, title: "Delete", data: { toggle: "tooltip", confirm: 'Are you sure?' }) do %>
              <span class="glyphicon glyphicon-remove"></span>
            <% end %>
          </td>
    		</tr>
  		<% end -%>
  	</tbody>
  </table>
</div>

<%= paginate @programs %>
