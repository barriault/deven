<div class="page-header">
  <h2>Forgot your password?</h2>
</div>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), html: { class: "forgot_password form-horizontal", role: "form" }) do |f| %>

  <!-- Errors -->
  <%= bootstrap_errors f %>
  
  <!-- Email -->
  <%= content_tag(:div, class: "form-group #{has_error(f.object, :email)}") do %>
    <%= f.label :email, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.email_field :email, placeholder: "Email", class: "form-control" %>
    </div>
  <% end %>
  
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "Send me reset password instructions", class: "btn btn-default" %>
    </div>
  </div>
<% end %>


<div class="col-sm-offset-2 col-sm-10">
	<%= render "devise/shared/links" %>
</div>

