<div class="page-header">
  <h2>Forgot your password?</h2>
</div>

<%= bootstrap_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
	<%= f.bs_email_field :email, placeholder: "Email", :autofocus => true %>
	<%= f.bs_submit "Send me reset password instructions" %>
<% end %>

<div class="col-sm-offset-2 col-sm-10">
	<%= render "devise/shared/links" %>
</div>

