<%= form_for(@user, html: { class: "edit_user form-horizontal", role: "form" }) do |f| %>

  <!-- Errors -->
  <%= bootstrap_errors f %>
  
  <%= content_tag(:div, class: "form-group #{has_error(f.object, :email)}") do %>
    <%= f.label :email, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :email, placeholder: "Email", class: "form-control" %>
    </div>
  <% end %>
  
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-default" %>
    </div>
  </div>
<% end %>
